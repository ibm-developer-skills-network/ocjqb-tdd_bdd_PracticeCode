{
  "name": "bdd-testing-lab",
  "version": "1.0.0",
  "description": "BDD testing lab with Jest, Selenium, and Cucumber",
  "scripts": {
    "test": "cucumber-js",
    "test:verbose": "cucumber-js --format @cucumber/pretty-formatter",
    "test:progress": "cucumber-js --format progress",
    "test:summary": "cucumber-js --format summary",
    "test:html": "cucumber-js --format html:cucumber-report.html",
    "test:json": "cucumber-js --format json:cucumber-report.json",
    "test:steps": "cucumber-js --format-options '{\"snippetInterface\": \"synchronous\"}'",
    "test:jest": "jest",
    "setup": "./bin/setup.sh"
  },
  "dependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "axios": "^1.5.0",
    "selenium-webdriver": "^4.15.0"
  },
  "devDependencies": {
    "@cucumber/pretty-formatter": "^1.0.1",
    "@types/selenium-webdriver": "^4.1.20",
    "chai": "^5.2.0",
    "jest": "^29.7.0"
  }
}
